 $(function(){
	$('#azul').click(function(){
			$('p').css("color", "blue");
				$('p').fadeOut();
					$('p').delay(1000);
				$('p').fadeIn();

		});
});
		    $('#vermelho ').click(function(){
				$('p').css("color", "red");
				$('#mensagem').text("cor alterada com sucesso");
				$('#mensagem').css('color', 'red');
				$('#mensagem').css('border', '2px solid gray');
				$('#mensagem').delay(3000);
				$('#mensagem').fadeOut('fast');
        
});
